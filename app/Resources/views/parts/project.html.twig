<section id="fh5co-projects">
    <div class="container">
        <div class="row row-bottom-padded-md">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2 class="fh5co-lead animate-box">Nos Produits</h2>
                <p class="fh5co-sub-lead animate-box">Nos expert techiques vous assisterez dans la moindre d√©tails. </p>
            </div>
        </div>
        <div class="row">
            {% for project in projects %}
                <div class="col-md-4 col-sm-6 col-xxs-12 animate-box">

                    <a href="{{ asset('assets/images/'~project.image ) }}" class="fh5co-project-item image-popup">
                        <img src="{{ asset('assets/images/'~project.image ) }}" alt="Image" class="img-responsive">
                        <div class="fh5co-text">
                            <h2>{{ project.packageName }}</h2>
                            <p>{{ project.description }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}





        </div>
    </div>
</section>