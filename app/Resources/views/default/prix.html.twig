{% extends 'base.html.twig' %}
{% block banner %}
    {{ include ('parts/about/banner.html.twig')}}
{% endblock %}
{% block tableau %}
    <section id="fh5co-pricing">
        <div class="container">
            <div class="row">
                <!--get only the on premise packages -->
                {% for package in onpremisepackages %}
                    <div class="col-md-3 col-sm-6 animate-box">
                        <div class="price-box">
                            <h1>{{ package.PackageName| title }}</h1>
                            <h2 class="pricing-plan">{{ onpremiseCategory.categoryName}} - {{ package.packageType.PackageTypeName}}</h2>
                            <div class="price"><sup class="currency">$</sup>{{ package.price }}<small>/mo</small></div>
                            <p>{{ package.Description|length < 100 ?  package.Description :  package.Description|slice(0, 100) ~'...' }}</p><a href="#">See more</a><hr>
                            <ul class="pricing-info">
                            </ul>
                            <a href="{{ path('package/detail/service',{'package': package.id, 'packageName': package.PackageName}) }}" class="btn btn-default btn-sm">Get started</a>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}
